<aura:component controller="MultiObjectController" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global" >
	
    
    <aura:attribute name="accounts" type="List"/>
    <aura:attribute name="contacts" type="Contact[]"/>
    <aura:attribute name="opportunities" type="List"/>
	<aura:attribute name="connections" type="List"/>
    <aura:attribute name="accountColumns" type="List"/>
    <aura:attribute name="contactColumns" type="List"/>
    <aura:attribute name="opportunityColumns" type="List"/>
	 <aura:attribute name="connectionColumns" type="List"/>
    
    
    <aura:attribute name="selectedContactId" type="String"/>
    <aura:attribute name="associatedAccountName" type="String"/>
    <aura:attribute name="selectedOpportunityId" type="String"/>
    
     <aura:attribute name="showModal" type="Boolean" default="false"/>
    <aura:attribute name="accountName" type="String"/>
    <aura:attribute name="contactName" type="String"/>
    <aura:attribute name="opportunityName" type="String"/>
    
    
    <aura:attribute name="connectionName" type="String" />
    
    <aura:attribute name="opportunityId" type="String"/>
    <aura:attribute name="contactId" type="String"/>
    
    
     <aura:attribute name="recordId" type="Id" />
    <aura:attribute name="objectApiName" type="String" default="Connection__c" />

    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    
    
     <!-- Connect Button -->
    <lightning:button label="Connect" variant="brand" onclick="{!c.openModal}" class="slds-m-bottom_medium"/>

    
    
     <!-- Modal -->
    <aura:if isTrue="{!v.showModal}">
        <section role="dialog" tabindex="-1" class="slds-modal slds-fade-in-open">
            <div class="slds-modal__container">
                <header class="slds-modal__header">
                    <h2 class="slds-text-heading_medium">Connect Data</h2>
                </header>
                <div class="slds-modal__content slds-p-around_medium">
                    
                    
               
                    <lightning:recordEditForm objectApiName="Connection__c">
                    	<lightning:inputField fieldName="Contact__c" onchange="{!c.onContactChange}"  />
                        <lightning:inputField label="Associated Account"  fieldName="Account__c" value="{!v.associatedAccountName}"/>
                        <lightning:inputField label="Associated Opportunity" onchange="{!c.onOpportunityChange}" fieldName="Opportunity__c" />
                    </lightning:recordEditForm>
                    
                  

                </div>
                <footer class="slds-modal__footer">
                    <lightning:button variant="neutral" label="Cancel" onclick="{!c.closeModal}" />
                     <lightning:button variant="brand" label="Save" onclick="{!c.saveConnection}" />
                   
                </footer>
            </div>
        </section>
        <div class="slds-backdrop slds-backdrop_open"></div>
    </aura:if>

<!--Objects-->
    <lightning:card title="Accounts">
        <lightning:datatable keyField="Id" data="{!v.accounts}" columns="{!v.accountColumns}" />
    </lightning:card>

    <lightning:card title="Contacts">
        <lightning:datatable keyField="Id" data="{!v.contacts}" columns="{!v.contactColumns}" />
    </lightning:card>

    <lightning:card title="Opportunities">
        <lightning:datatable keyField="Id" data="{!v.opportunities}" columns="{!v.opportunityColumns}" />
    </lightning:card>

	<lightning:card title="Connections">
    	<lightning:datatable keyField="Id" data="{!v.connections}" columns="{!v.connectionColumns}" />
	</lightning:card>

    
</aura:component>